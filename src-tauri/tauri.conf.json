{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QuickClipboard",
  "version": "../package.json",
  "identifier": "com.quickclipboard.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "快速剪贴板",
        "width": 360,
        "height": 520,
        "minWidth": 350,
        "minHeight": 500,
        "maxWidth": 500,
        "maxHeight": 800,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "center": true,
        "visible": false,
        "resizable": true,
        "focus": false,
        "maximizable": false,
        "dragDropEnabled": false,
        "shadow": false,
        "visibleOnAllWorkspaces": true
      },
      {
        "label": "preview",
        "title": "快速预览",
        "url": "preview.html",
        "width": 400,
        "height": 180,
        "minWidth": 350,
        "minHeight": 180,
        "maxWidth": 400,
        "maxHeight": 180,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "center": false,
        "visible": false,
        "resizable": false,
        "focus": false,
        "maximizable": false,
        "minimizable": false,
        "dragDropEnabled": false
      },
      {
        "label": "screenshot",
        "title": "截屏窗口",
        "url": "screenshot/index.html",
        "width": 1920,
        "height": 1080,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "center": false,
        "visible": false,
        "resizable": false,
        "focus": false,
        "maximizable": false,
        "minimizable": false,
        "dragDropEnabled": false,
        "fullscreen": false,
        "visibleOnAllWorkspaces": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        "settings",
        "preview",
        "text-editor",
        "screenshot"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis",
      "app"
    ],
    "publisher": "MoSheng",
    "copyright": "Copyright © 2025 MoSheng. All rights reserved.",
    "icon": [
      "icons/icon32.png",
      "icons/icon64.png",
      "icons/icon128.png",
      "icons/icon256.png",
      "icons/icon1024.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../sounds": "sounds",
      "external_apps": "external_apps"
    },
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "languages": [
          "SimpChinese"
        ],
        "displayLanguageSelector": false
      },
      "wix": {
        "language": "zh-CN"
      }
    }
  }
}